<odoo>
    <record id="view_hms_patient_tree" model="ir.ui.view">
        <field name="name">hms.patient.tree</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="age"/>
                <field name="blood_type"/>
                <field name="pcr"/>
            </tree>
        </field>
    </record>

    <record id="view_hms_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <notebook>
                        <page string="Patient Info">
                            <group>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="email"/>
                                <field name="birth_date"/>
                                <field name="age"/>
                                <field name="blood_type"/>
                                <field name="cr_ratio"/>
                                <field name="pcr"/>
                                <field name="address"/>
                                <field name="state"/>
                                <field name="image"/>
                                <field name="history"/>
                                <field name="department_id"/>
                                <field name="doctor_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="State Log">
                            <field name="state_logs">
                                <tree>
                                    <field name="description"/>
                                    <field name="create_date"/>
                                    <field name="create_uid"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hms_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hms_menu_root" name="Hospital V-3" sequence="1"/>
    <menuitem id="hms_patient_menu" name="Patients" parent="hms_menu_root"/>
    <menuitem id="hms_patient_menu_items" name="All Patients" parent="hms_patient_menu" action="hms_patient_action"/>
</odoo>